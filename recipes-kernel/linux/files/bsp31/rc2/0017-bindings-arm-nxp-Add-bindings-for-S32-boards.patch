Signed-off-by: Ghennadi Procopciuc <ghennadi.procopciuc@nxp.com>
Signed-off-by: Zhantao Tang <zhantao.tang@windriver.com>
---
 .../bindings/arm/nxp/nxp-boards.yaml          | 44 +++++++++++++++++++
 1 file changed, 44 insertions(+)
 create mode 100644 Documentation/devicetree/bindings/arm/nxp/nxp-boards.yaml

diff --git a/Documentation/devicetree/bindings/arm/nxp/nxp-boards.yaml b/Documentation/devicetree/bindings/arm/nxp/nxp-boards.yaml
new file mode 100644
index 000000000000..5aec7a8ef9f9
--- /dev/null
+++ b/Documentation/devicetree/bindings/arm/nxp/nxp-boards.yaml
@@ -0,0 +1,44 @@
+# SPDX-License-Identifier: GPL-2.0-only OR BSD-2-Clause
+%YAML 1.2
+---
+$id: http://devicetree.org/schemas/arm/nxp/nxp-boards.yaml#
+$schema: http://devicetree.org/meta-schemas/core.yaml#
+
+title: NXP boards
+
+properties:
+  $nodename:
+    const: '/'
+  compatible:
+    oneOf:
+      - description: S32V2 based boards
+        items:
+          - const: fsl,s32v234
+          - const: fsl,s32v234-campps32v2
+          - const: fsl,s32v234-ccpb
+          - const: fsl,s32v234-evb2016q4
+          - const: fsl,s32v234-evb28899
+          - const: fsl,s32v234-pcie
+          - const: fsl,s32v234-sbc
+
+      - description: S32G2 based boards
+        items:
+          - const: fsl,s32g274
+          - const: fsl,s32g274-simu     # S32G274A simulator
+
+      - description: S32R45 based boards
+        items:
+          - const: fsl,s32r45
+          - const: fsl,s32r45-simu     # S32R45 simulator
+
+      - description: S32G3 based boards
+        items:
+          - const: fsl,s32g398a
+          - const: fsl,s32g398a-emu     # S32G3 emulator
+          - const: fsl,s32g399
+
+
+required:
+  - compatible
+
+additionalProperties: true
